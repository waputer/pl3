doc = $com_doc $os_doc;

root = ${?root};
pl3  = $root/pl3-1.0.0-dev5;
ver  = 1.0.0-dev6;
bin  = pl3-$ver;

## compiler build

lib.o lib.pl3mod : $lib_src $root/rt.common.pl3mod {
	$pl3 $lib_src -o lib.ll -i $root/rt.common.pl3mod -e lib.pl3mod;
	llc -O1 lib.ll -o lib.o -filetype=obj -relocation-model=pic;
}

bin.o : $bin_src $root/rt.common.pl3mod lib.pl3mod {
	$pl3 $bin_src -o bin.ll -i $root/rt.common.pl3mod -i lib.pl3mod;
	llc -O1 bin.ll -o bin.o -filetype=obj -relocation-model=pic;
}

$bin : bin.o lib.o $root/rt.common.o $root/rt.posix.o $root/start.c $root/rt/posix/src/start.c {
	gcc $^ -lm -o $@ -pthread -lm;
}


bin2.o : pl3chk $bin2_src lib2.o {
	./pl3chk $bin2_src -o bin2.ll -i ../rt/rt.elf.pl3mod -i lib2.pl3mod -i ../miir/lib/miir.pl3mod;
	llc -O1 bin2.ll -o bin2.o -filetype=obj -relocation-model=pic;
}

lib2.o : $lib2_src ../rt/rt.elf.pl3mod {
	./pl3chk $lib2_src -o lib2.ll -i ../rt/rt.elf.pl3mod -e lib2.pl3mod;
	llc -O1 lib2.ll -o lib2.o -filetype=obj -relocation-model=pic;
}

pl3c : bin2.o lib2.o ../rt/rt.elf.o ../miir/lib/miir.o ../rt/ext.c {
	gcc $^ -lm -o $@ -pthread -lm;
}


bin3.o : pl3c $bin2_src lib3.o {
	./pl3c -t elf $bin2_src -o bin3.o -i ../rt/rt.elf.pl3mod -i lib3.pl3mod -i ../miir/lib/miir.pl3mod;
}

lib3.o : pl3c $lib2_src ../rt/rt.elf.pl3mod {
	./pl3c -t elf $lib2_src -o lib3.o -i ../rt/rt.elf.pl3mod -e lib3.pl3mod;
}

pl3c2 : bin3.o lib3.o ../rt/rt.elf.o ../miir/lib/miir.o ../rt/ext.c {
	gcc $^ -lm -o $@ -pthread -lm;
}


