	#gcc rt/posix/src/start.c start.c foo.o rt.o lib.o -lm -lpthread -o foo;
	#./foo;
	#llc -O0 uhg.ll -o uhg.o -filetype=obj -relocation-model=pic;
}

# distribute

.dist : pl3-${ver}-src.tar.xz;

pl3-${ver}-src.tar.xz : Hammer hammer.sh Makefile start.c rt/posix/src/start.c $rt_src $com_src $posix_src $lib_src $lib2_src $bin_src $bin2_src LICENSE {
	rm -rf pl3-${ver}-src;
	mkdir pl3-${ver}-src;
	cp -a --parents ${^.uniq()} pl3-${ver}-src;
	tar -Jcf $@ pl3-${ver}-src;
	rm -rf pl3-${ver}-src;
}

# clean

.clean : {
	rm -rf $*;
}
