# distribute

.dist : pl3-${ver}-src.tar.xz;

pl3-${ver}-src.tar.xz : Hammer hammer.sh start.c rt/posix/src/start.c $rt_src $com_src $posix_src $lib_src $lib2_src $bin_src LICENSE {
	rm -rf pl3-${ver}-src;
	mkdir pl3-${ver}-src;
	cp -a --parents ${^.uniq()} pl3-${ver}-src;
	tar -Jcf $@ pl3-${ver}-src;
	rm -rf pl3-${ver}-src;
}

# documentation

.doc : doc.json;

doc.json : $doc {
	node ../doc/test.js $doc > $@;
}

# clean

.clean : {
	rm -rf $*;
}

